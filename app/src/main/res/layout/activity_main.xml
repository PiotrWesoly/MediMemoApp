<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calendarBtn"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="@drawable/button_schedule"
        android:text="SCHEDULE"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/calendarImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/calendarImageView"
        app:layout_constraintTop_toTopOf="@+id/calendarImageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/progressBtn"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:background="@drawable/button_progress"
        android:text="PROGRESS"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/settingsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressImageView2"
        app:layout_constraintTop_toBottomOf="@+id/calendarBtn"
        app:layout_constraintVertical_bias="0.478" />

    <ImageView
        android:id="@+id/calendarImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/image_settings"
        app:layout_constraintBottom_toTopOf="@+id/progressImageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calendar" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button_settings"
        android:text="SETTINGS"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/settingsImageView4" />

    <ImageView
        android:id="@+id/settingsImageView4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/image_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/wrench" />

    <ImageView
        android:id="@+id/progressImageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/image_settings"
        app:layout_constraintBottom_toTopOf="@+id/settingsImageView4"
        app:layout_constraintEnd_toStartOf="@+id/progressBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/trophy_pic" />

    <ImageView
        android:id="@+id/nameImageView"
        android:layout_width="260dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toTopOf="@+id/calendarBtn"
        app:layout_constraintEnd_toStartOf="@+id/logoImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        app:srcCompat="@drawable/name_pic" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="121dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nameImageView"
        app:layout_constraintTop_toTopOf="@+id/nameImageView"
        app:layout_constraintVertical_bias="0.369"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>